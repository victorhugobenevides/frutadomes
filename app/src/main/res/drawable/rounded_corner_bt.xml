<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/colorPrimaryDark"
                android:endColor="@color/colorPrimaryDark"
                android:angle = "180" />
            <corners
                android:radius="2dp" />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" >
            </padding>
        </shape>
    </item>



    <item>
        <shape>
            <gradient
                android:startColor="@color/colorPrimary"
                android:endColor = "@color/colorPrimary"
                android:angle = "180" />
            <corners
                android:radius="2dp" />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" >
            </padding>
        </shape>
    </item>
</selector> 